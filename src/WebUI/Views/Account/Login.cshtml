@using Application.DTO.User
@model LoginDto
@{
    ViewData["Title"] = "Login";
}

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"> <!--С этим надо будет разобратся-->
<style>
    body {
        background-color: #fff;
    }

    .login-container {
        background-color: #343a40;
        border-radius: 15px;
        padding: 30px;
        box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.2);
        margin-top: 100px;
    }

    .login-header {
        color: #f8f8f8;
        text-align: center;
        font-size: 24px;
        margin-bottom: 20px;
    }

    .form-control {
        border-radius: 10px;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        transition: background-color 0.3s;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }
    /* Добавьте этот стиль в ваш блок <style> */
    .center-line {
        width: 80%;
        margin: 10px auto; /* Центрирование линии по горизонтали */
        border: none;
        height: 2px;
        background-color: #fff; /* Цвет линии */
    }

    .control-label {
        color: #fff;
    }
</style>
    @if (TempData["Error"] != null)
    {
    <div class="col-md-12 alert alert-danger">
        <span><b>Sorry!</b> - @TempData["Error"]</span>
    </div>
    }
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-4 login-container">
            <h1 class="login-header">Log in</h1>
            <form id="login-form" asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Username" class="control-label">Username</label>
                    <input type="Username" asp-for="Username" class="form-control" placeholder="Username">
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label">Password</label>
                    <input type="password" asp-for="Password" class="form-control" id="inputPassword" placeholder="Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group mt-4 text-center">
                    <button class="btn btn-success btn-login" type="submit">Log in</button>
                    <a class="btn btn-outline-secondary btn-cancel" asp-controller="Home" asp-action="Index">Cancel</a>
                </div>
                <hr class="center-line">
            </form>
        </div>
    </div>
</div>